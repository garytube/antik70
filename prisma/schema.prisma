generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model SiteConfig {
  id           Int        @id @default(autoincrement())
  value        Json
  open_houres  OpenHoures @relation(fields: [openHouresId], references: [id])
  updatedAt    DateTime   @updatedAt
  openHouresId Int
}

model OpenHoures {
  id         Int          @id @default(autoincrement())
  open       Json
  active     Boolean
  updatedAt  DateTime     @updatedAt
  SiteConfig SiteConfig[]
}
